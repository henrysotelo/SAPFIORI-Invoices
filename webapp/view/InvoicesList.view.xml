<mvc:View 
    controllerName="dev.invoices.controller.InvoicesList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    displayBlock="true">

    <Panel id="_panelIDList" 
            class="sapUiResponsiveMargin"
            width="auto" >
       <List id="_listID" 
            headerText="Lista del ODATA" 
            width="auto"
            items="{ path: 'northwind>/Invoices',
                     sorter: { path: 'ProductName', group: true }
                    }">
            <headerToolbar>
                <Toolbar id="_IDGenToolbar1" >
                <Title id="_IDGenTitle1" text="{i18n>InvoicesToolbar}" ></Title>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <SearchField id="_IDGenSearchField1" width="50%" search=".onFilterInvoices"/>
                </Toolbar>
            </headerToolbar>
            <items>
             <ObjectListItem 
                id="_listItemID" 
                title="{northwind>Quantity} x {northwind>ProductName}"
                number="{ parts : [ { path : 'northwind>ExtendedPrice'}, 
                                    { path : 'currency>/usd' } ],
                          type: 'sap.ui.model.type.Currency',
                          formatOptions: { showMeasure : false } }"
                numberUnit="{currency>/usd}"          
                numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}">
                
                    <firstStatus>
                        <ObjectStatus id="_status" text="{ path: 'northwind>UnitPrice', 
                                                           formatter: '.formatter.invoiceStatus' }"></ObjectStatus>
                    </firstStatus>
                
                </ObjectListItem>
            </items>
        </List>
    </Panel>
</mvc:View>